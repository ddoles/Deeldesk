# ============================================================================
# Deeldesk.ai Environment Variables
# ============================================================================
# Copy this file to .env.local for development
# Never commit .env.local or any file with real secrets!
# ============================================================================

# ----------------------------------------------------------------------------
# DATABASE
# ----------------------------------------------------------------------------
# PostgreSQL connection string with pgvector extension enabled
DATABASE_URL="postgresql://postgres:password@localhost:5432/deeldesk?schema=public"

# Optional: Direct connection for migrations (bypasses connection pooling)
DIRECT_URL="postgresql://postgres:password@localhost:5432/deeldesk?schema=public"

# ----------------------------------------------------------------------------
# AUTHENTICATION (NextAuth.js)
# ----------------------------------------------------------------------------
# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# Secret for encrypting cookies and tokens (min 32 characters)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-min-32-characters-long"

# ----------------------------------------------------------------------------
# OAUTH PROVIDERS (Optional for development)
# ----------------------------------------------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Microsoft OAuth (optional)
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""

# ----------------------------------------------------------------------------
# AI SERVICES
# ----------------------------------------------------------------------------
# Anthropic Claude API (required)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-api03-..."

# OpenAI API (required for embeddings)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Default model (can be overridden per request)
DEFAULT_LLM_MODEL="claude-3-5-sonnet-20241022"
DEFAULT_EMBEDDING_MODEL="text-embedding-3-small"

# ----------------------------------------------------------------------------
# REDIS (for BullMQ job queue)
# ----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"

# Optional: Redis credentials if required
# REDIS_PASSWORD=""

# ----------------------------------------------------------------------------
# FILE STORAGE (S3-compatible)
# ----------------------------------------------------------------------------
# S3 bucket for exports and uploads
S3_BUCKET="deeldesk-dev"
S3_REGION="us-east-1"

# For local development with MinIO
S3_ENDPOINT="http://localhost:9000"
S3_FORCE_PATH_STYLE="true"

# AWS credentials (or MinIO access keys)
AWS_ACCESS_KEY_ID="minioadmin"
AWS_SECRET_ACCESS_KEY="minioadmin"

# Optional: CloudFront CDN for production
# CDN_URL="https://cdn.deeldesk.ai"

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
# Environment
NODE_ENV="development"

# Logging level: debug, info, warn, error
LOG_LEVEL="debug"

# Rate limiting (requests per minute per user)
RATE_LIMIT_RPM="60"

# Maximum proposal generation time (seconds)
MAX_GENERATION_TIME="120"

# ----------------------------------------------------------------------------
# FEATURE FLAGS (Development)
# ----------------------------------------------------------------------------
# Enable/disable features for development
FEATURE_SAFE_MODE="true"
FEATURE_SHARE_LINKS="true"
FEATURE_ANALYTICS="false"

# ----------------------------------------------------------------------------
# EXTERNAL INTEGRATIONS (Phase 2+)
# ----------------------------------------------------------------------------
# Salesforce (Phase 2)
# SALESFORCE_CLIENT_ID=""
# SALESFORCE_CLIENT_SECRET=""
# SALESFORCE_REDIRECT_URI=""

# HubSpot (Phase 2)
# HUBSPOT_CLIENT_ID=""
# HUBSPOT_CLIENT_SECRET=""

# Gong (Phase 2)
# GONG_API_KEY=""

# ----------------------------------------------------------------------------
# MONITORING & ERROR TRACKING (Production)
# ----------------------------------------------------------------------------
# Sentry
# SENTRY_DSN=""
# SENTRY_ENVIRONMENT="development"

# Datadog
# DD_API_KEY=""
# DD_SITE="datadoghq.com"

# ----------------------------------------------------------------------------
# EMAIL (for notifications)
# ----------------------------------------------------------------------------
# SMTP settings
# SMTP_HOST=""
# SMTP_PORT="587"
# SMTP_USER=""
# SMTP_PASSWORD=""
# SMTP_FROM="noreply@deeldesk.ai"

# Or use a service like Resend
# RESEND_API_KEY=""

# ----------------------------------------------------------------------------
# DEVELOPMENT HELPERS
# ----------------------------------------------------------------------------
# Skip email verification in development
SKIP_EMAIL_VERIFICATION="true"

# Enable Prisma query logging
PRISMA_LOG_QUERIES="false"

# Enable API request logging
LOG_API_REQUESTS="true"
